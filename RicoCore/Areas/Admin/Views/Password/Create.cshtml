@using RicoCore.Services.Systems.Passwords.Dtos;
@model PasswordViewModel
@section Scripts{
    <script src="~/app/controllers/password/create.js" asp-append-version="true"></script>
    <script>
        var password = new passwordController();
        password.initialize();
    </script>
}
@section Styles{
    <style>
        .field-validation-error {
            color: red
        }

        .validation-summary-errors {
            color: red
        }
    </style>
}
    <form action="/admin/password/create" method="post" class="form-horizontal" role="form" id="frmAdd" enctype="multipart/form-data">
        <a class="btn btn-info" href="javascript:void(0);" onclick="window.history.go(-1);"><i class="fa fa-backward"></i>&nbsp;Trở lại</a>       
        <button type="submit" id="btnSave" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Lưu</button>
        <button type="button" id="btnReset" data-dismiss="modal" class="btn btn-danger btn-cancel">Reset</button>

        <input type="hidden" id="oldTags" />
        <h1>Thêm mới mật khẩu</h1>
        <div asp-validation-summary="ModelOnly">
            <span>Sửa những lỗi sau:</span>
        </div>



        <div class="form-group">
            <div class="col-sm-6">
                <div class="col-sm-2">
                    <label for="Content" class="control-label no-padding-right text-left">Mật khẩu*</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Content" class="form-control text-left">
                    <span asp-validation-for="Content"></span>
                </div>
            </div>

            <div class="col-sm-2">
                <div class="col-sm-4">
                    <label for="Level" class="control-label no-padding-right text-left">Cấp*</label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Level" class="form-control text-left" value="1" />
                    <span asp-validation-for="Level"></span>                  
                </div>
            </div>

            <div class="col-sm-2">
                <div class="col-sm-4">
                    <label for="Order" class="control-label no-padding-right text-left">Thứ tự*</label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Order" class="form-control text-left" />
                    <span asp-validation-for="Order"></span>                                 
                </div>
            </div>
        </div>
</form>
