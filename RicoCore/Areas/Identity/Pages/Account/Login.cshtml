@page "/Login"
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập bước 1";
    //Layout = "/Areas/Identity/Pages/Account/_LoginLayout.cshtml";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Đăng nhập hệ thống </title>

    <!-- Bootstrap -->

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- NProgress -->

    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->

    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <link href="~/lib/notify/styles/metro/notify-metro.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
</head>

<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form id="frmLogin" method="post">
                        @Html.AntiForgeryToken()
                        <h1>Đăng nhập</h1>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div>
                            <input asp-for="Input.UserName" class="form-control" placeholder="Tên đăng nhập" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>

                        <div>
                            <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember" asp-for="Input.RememberMe">
                                    <label asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                                @*<button type="submit" class="btn btn-default" id="btnLogin">Đăng nhập</button>*@
                                <a class="reset_pass" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                            </div>
                            <!-- /.col -->
                        </div>
                      
                        <div class="clearfix"></div>

                        <div class="separator">

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> CMS </h1>
                                <p>©@DateTime.Now.Year - <a href="https://www.facebook.com/luongtuananh.86" target="_blank" style="color:blue;">Lương Tuấn Anh</a></p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/notify/notify.js"></script>
    <script src="~/lib/notify/styles/metro/notify-metro.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/localization/messages_vi.js"></script>
    @*<script src="~/app/shared/aspnetcore.js"></script>*@   
</body>
</html>



